@model CalculationModel
@{
  ViewData["Title"] = "Calculator";
}

<div class="container">
  <div class="row">
    <div class="col-12">
      <h3>@ViewData["Message"]</h3>
    </div>
  </div>
  <div style="height:10px"></div>
  <div class="row">
    <div class="col-12">
      <form asp-action="Calculate" asp-controller="Calculator" method="post">
        <fieldset>
          <legend>Input Data:</legend>

          <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <div>
              <select asp-for="Type" asp-items="Html.GetEnumSelectList<RedingtonCalculator.Domain.Calculation.CalculatorType>()" name="Type">
                <!-- Start Country Options -->
                <option value="" hidden>---Select Value---</option>
              </select>
              <span asp-validation-for="Type" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <label asp-for="Probability1" class="control-label"></label>
            <div>
              <input asp-for="Probability1" class="form-control" />
              <span asp-validation-for="Probability1" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <label asp-for="Probability2" class="control-label"></label>
            <div>
              <input asp-for="Probability2" class="form-control" />
              <span asp-validation-for="Probability2" class="text-danger"></span>
            </div>
          </div>
          <button class="btn btn-primary" type="submit">Calculate</button>
        </fieldset>
      </form>
    </div>
  </div>
  <div style="height:10px"></div>
  <div class="row">
    <div class="col-12">
      <fieldset>
        <legend>Result:</legend>
        @Html.DisplayFor(m => m.Output)
      </fieldset>
    </div>
  </div>
</div>
